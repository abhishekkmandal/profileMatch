<% layout('layouts/boilerplate') %>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <h1 class="text-center">Login</h1>
                <div class="col-6 offset-3">
                    <form action="/login" method="POST" novalidate class="validated-form">
                        <div class="mb-3">
                            <label class="form-label" for="username">Email ID</label>
                            <input class="form-control" type="text" id="username" name="username" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary">Login</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="text-center" class="card-body">
            <br>
            <a href="/register" class="btn btn-success">Create New Account</a>
            <br>
            <br>
        </div>
    </div>